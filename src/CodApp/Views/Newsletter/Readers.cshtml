@model ICollection<CodApp.Models.Reader>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br>
<div class="container">
  <div class="">
      <h2>Current Mailing List</h2>
      @if (Model.Count == 0) {
      <div class="well">
        <h3>There are no readers yet!</h3>
      </div>
      }
      else {
        <ol class="mailing-list">
        @foreach (var reader in Model)
        {
          <li>
            <ul>@reader.Name from @reader.City:
              <li>@reader.Email</li>
            </ul>
          </li>
        }
        </ol>
      }
  </div>
</div>
