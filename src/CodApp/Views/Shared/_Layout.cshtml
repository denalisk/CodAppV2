<!DOCTYPE html>

<html>
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/CSS/styles.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="~/Scripts/AjaxCalls.js" type="text/javascript"></script>
    <script src="~/Scripts/scripts.js" type="text/javascript"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Son of Cod</title>
</head>
<body>
    <div>
        <nav class="navbar nav mynavbar">
            <div class="nav-bar-holder">
                <div class="overlay-images">
                    <img src="~/Images/fishcan.png" alt="Canned fish decal" />
                </div>
                <div class="top-section">
                </div>
                <div class="bottom-section">
                    <div class="link-holder container">
                    @Html.ActionLink("Home", "Index", "Home") | @Html.ActionLink("Newsletter", "Index", "Newsletter") |
                    @if (User.Identity.IsAuthenticated)
                    {
                        @Html.ActionLink("Admin Home", "Index", "Administrator")
                    }
                    else
                    {
                        @Html.ActionLink("Admin Login", "Login", "Administrator")
                    }
                    </div>
                </div>

            </div>
        </nav>
        <div class="top-buffer">
        </div>
        <br>
        @RenderBody()
    </div>
</body>
</html>
