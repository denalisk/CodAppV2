@model CodApp.Models.Article

<h3>Edit this article:</h3>

@using (Html.BeginForm("EditArticle", "Newsletter", FormMethod.Post, new { id = "new-edit" }))
{
  <div class="col-md-3"></div>
  <div class="form-group">
    @Html.Hidden("NewsletterId")
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.PageLabel)
    <br>
    @Html.LabelFor(m => m.Title)
    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    <br />

    @Html.LabelFor(m => m.Content)
    @Html.TextAreaFor(m => m.Content, new { style = "width: 100%;height:100px;", @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.ImageSrcString, "Location of image, either root directory or on the web")
    @Html.TextBoxFor(m => m.ImageSrcString, new { @class = "form-control" })
    <br>
    <button type="submit" class="btn btn-info save-article-button" name="button" value="@Model.Id">Save Changes</button>
  </div>
}
